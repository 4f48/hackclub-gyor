---
import { Image } from "astro:assets";
import Boba from "@/assets/images/boba/boba.svg";

interface Props {
	alt: string;
	src: ImageMetadata;
	step: number;
}
const { alt, src, step } = Astro.props;
---

<div
	class="relative overflow-hidden rounded-2xl text-xl transition-transform duration-400 hover:-translate-y-1"
>
	<Image
		alt={alt}
		class="h-full w-full object-cover select-none"
		draggable={false}
		loading="eager"
		src={src}
	/>
	<div class="absolute top-4 left-4">
		<div class="relative">
			<Boba />
			<div class="absolute top-1 left-1/2 -translate-x-1/2 text-2xl text-white">
				{step}
			</div>
		</div>
	</div>
	<div class="absolute right-4 bottom-4 font-bold shadow-2xl"><slot /></div>
</div>
