---
import { Image } from "astro:assets";
import Boba from "@/assets/images/boba/boba.svg";

interface Props {
    alt: string;
    src: ImageMetadata;
    step: number;
}
const { alt, src, step } = Astro.props;
---

<div
    class="relative rounded-2xl overflow-hidden text-xl hover:-translate-y-1 transition-transform duration-400"
>
    <Image
        alt={alt}
        class="w-full h-full object-cover select-none"
        draggable={false}
        loading="eager"
        src={src}
    />
    <div class="absolute top-4 left-4">
        <div class="relative">
            <Boba />
            <div
                class="absolute top-1 left-1/2 -translate-x-1/2 text-2xl text-white"
            >
                {step}
            </div>
        </div>
    </div>
    <div class="absolute bottom-4 right-4 font-bold shadow-2xl"><slot /></div>
</div>
